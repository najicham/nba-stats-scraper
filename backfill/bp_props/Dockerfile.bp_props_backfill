# FILE: backfill/bp_props/Dockerfile.bp_props_backfill
# 
# Dockerfile for BettingPros Historical Backfill Cloud Run Job
# Builds a job container that downloads 3 seasons of historical prop data

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install common Python dependencies (adjust based on your setup)
RUN pip install --no-cache-dir \
    requests \
    google-cloud-storage \
    google-cloud-logging \
    flask \
    python-dotenv

# Copy the job script
COPY backfill/bp_props/bp_props_backfill_job.py ./bp_props_backfill_job.py

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Default command runs the backfill job
ENTRYPOINT ["python", "bp_props_backfill_job.py"]