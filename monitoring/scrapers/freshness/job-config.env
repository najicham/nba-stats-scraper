# File: monitoring/scrapers/freshness/job-config.env
#
# Configuration for freshness monitoring Cloud Run job

# Cloud Run Job Settings
SERVICE_NAME="freshness-monitor"
IMAGE_NAME="gcr.io/${GCP_PROJECT_ID}/freshness-monitor:latest"
REGION="us-west2"

# Job Resource Settings
MEMORY="512Mi"
CPU="1"
MAX_RETRIES="1"
TASK_TIMEOUT="5m"

# Cloud Scheduler Settings
SCHEDULER_NAME="freshness-monitor-hourly"
SCHEDULE="0 * * * *"  # Every hour on the hour
SCHEDULER_TIMEZONE="America/New_York"

# Alternative schedules (uncomment to use):
# SCHEDULE="0 6,9,12,15,18,21 * * *"  # Every 3 hours starting at 6 AM
# SCHEDULE="0 */2 * * *"               # Every 2 hours
# SCHEDULE="*/30 * * * *"              # Every 30 minutes

# Monitoring Configuration
# (Most settings come from monitoring_config.yaml)

# Alert Settings
MIN_ALERT_SEVERITY="warning"  # warning, critical, info
