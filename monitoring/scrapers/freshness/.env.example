# File: monitoring/scrapers/freshness/.env.example
#
# Example environment variables for freshness monitoring
# Copy to project root .env and fill in actual values

# Google Cloud Project
GCP_PROJECT_ID="your-project-id"
REGION="us-west2"

# Email Alerting (Brevo)
BREVO_SMTP_HOST="smtp-relay.brevo.com"
BREVO_SMTP_PORT="587"
BREVO_SMTP_USERNAME="your-smtp-username"
BREVO_SMTP_PASSWORD="your-smtp-password"
BREVO_FROM_EMAIL="alerts@yourdomain.com"
BREVO_FROM_NAME="NBA Platform Alerts"
EMAIL_ALERTS_ENABLED="true"
EMAIL_ALERTS_TO="your-email@example.com"
EMAIL_CRITICAL_TO="critical-alerts@example.com"

# Slack Alerting (Extensible Multi-Tier)
SLACK_ALERTS_ENABLED="true"
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/DEFAULT/WEBHOOK"
SLACK_WEBHOOK_URL_ERROR="https://hooks.slack.com/services/YOUR/ERROR/WEBHOOK"
SLACK_WEBHOOK_URL_CRITICAL="https://hooks.slack.com/services/YOUR/CRITICAL/WEBHOOK"

# Ball Don't Lie API (for schedule checking)
BALL_DONT_LIE_API_KEY="your-api-key-here"

# GCS Configuration
GCS_RAW_DATA_BUCKET="nba-raw-data"
