# FILE: backfill/bdb_play_by_play/Dockerfile.bdb_play_by_play_backfill
# 
# Dockerfile for BigDataBall 2024-25 Enhanced Play-by-Play Backfill Cloud Run Job
# Builds a job container that downloads missing 2024-25 season data from Google Drive

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies directly (matching bp_props pattern)
RUN pip install --no-cache-dir \
    requests \
    google-cloud-storage \
    google-cloud-logging \
    google-api-python-client \
    google-auth \
    google-auth-oauthlib \
    google-auth-httplib2 \
    pandas \
    flask \
    python-dotenv

# Copy the job script
COPY backfill/bdb_play_by_play/bdb_play_by_play_backfill_job.py ./bdb_play_by_play_backfill_job.py

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Default command runs the backfill job
ENTRYPOINT ["python", "bdb_play_by_play_backfill_job.py"]