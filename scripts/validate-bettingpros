#!/bin/bash
# =============================================================================
# File: scripts/validate-bettingpros
# Purpose: CLI tool for running BettingPros player props validation queries
# Usage: ./scripts/validate-bettingpros [command] [options]
# =============================================================================

set -e  # Exit on error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Base directory
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$( cd "$SCRIPT_DIR/.." && pwd )"
QUERIES_DIR="$PROJECT_ROOT/validation/queries/raw/bettingpros_player_props"

# =============================================================================
# Helper Functions
# =============================================================================

print_header() {
    echo -e "${BLUE}=================================================${NC}"
    echo -e "${BLUE}$1${NC}"
    echo -e "${BLUE}=================================================${NC}"
}

print_success() {
    echo -e "${GREEN}✅ $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}⚠️  $1${NC}"
}

print_error() {
    echo -e "${RED}❌ $1${NC}"
}

# =============================================================================
# Show Available Commands
# =============================================================================

show_help() {
    cat << EOF
${GREEN}BettingPros Player Props Validation Tool${NC}

Usage: validate-bettingpros [command] [options]

${YELLOW}HISTORICAL VALIDATION:${NC}
  completeness          Full season completeness check (all 4 seasons)
  missing               Find specific missing dates with no props
  confidence            Monitor validation confidence scores by date
  bookmakers            Analyze bookmaker coverage and participation
  playoffs              Verify playoff game completeness

${YELLOW}DAILY MONITORING:${NC}
  yesterday             Check if yesterday's games were captured
  week                  Review last 7 days coverage and trends
  today                 Real-time scraper health check (future)

${YELLOW}OPTIONS:${NC}
  --csv                 Save results to CSV file
  --table               Save results to BigQuery table
  --help                Show this help message

${YELLOW}EXAMPLES:${NC}
  validate-bettingpros completeness         # Run full season check
  validate-bettingpros yesterday --csv      # Check yesterday, save to CSV
  validate-bettingpros missing              # Find missing dates
  validate-bettingpros confidence           # Monitor confidence scores
  validate-bettingpros bookmakers           # Analyze bookmaker coverage

${YELLOW}QUICK COMMANDS:${NC}
  validate-bettingpros list                 # List all available queries
  validate-bettingpros help                 # Show this help

${YELLOW}KEY FEATURES:${NC}
  • Tracks 20 active sportsbooks (DraftKings, FanDuel, BetMGM, etc.)
  • Monitors validation confidence (0.95 = recent, 0.1 = historical)
  • Validates 2.17M+ props across 4 complete NBA seasons
  • Detects missing dates and low coverage games

EOF
}

# =============================================================================
# List All Queries
# =============================================================================

list_queries() {
    print_header "Available Validation Queries"
    echo ""
    echo "Historical Validation:"
    echo "  1. season_completeness_check.sql           (alias: completeness)"
    echo "  2. find_missing_games.sql                  (alias: missing)"
    echo "  3. confidence_score_monitoring.sql         (alias: confidence)"
    echo "  4. bookmaker_coverage_analysis.sql         (alias: bookmakers)"
    echo "  5. verify_playoff_completeness.sql         (alias: playoffs)"
    echo ""
    echo "Daily Monitoring:"
    echo "  6. daily_check_yesterday.sql               (alias: yesterday)"
    echo "  7. weekly_check_last_7_days.sql            (alias: week)"
    echo ""
}

# =============================================================================
# Run Query
# =============================================================================

run_query() {
    local query_file=$1
    local output_format=$2
    local query_path="$QUERIES_DIR/$query_file"

    if [ ! -f "$query_path" ]; then
        print_error "Query file not found: $query_file"
        echo "Run 'validate-bettingpros list' to see available queries"
        exit 1
    fi

    print_header "Running: $query_file"
    echo ""

    case $output_format in
        csv)
            local timestamp=$(date +%Y%m%d_%H%M%S)
            local output_file="validation_bettingpros_${query_file%.sql}_${timestamp}.csv"
            print_warning "Saving results to: $output_file"
            bq query --use_legacy_sql=false --format=csv < "$query_path" > "$output_file"
            print_success "Results saved to $output_file"
            ;;
        table)
            local timestamp=$(date +%Y%m%d)
            local table_name="validation.bettingpros_${query_file%.sql}_${timestamp}"
            print_warning "Saving to BigQuery table: $table_name"
            bq query --use_legacy_sql=false --destination_table="nba-props-platform:${table_name}" < "$query_path"
            print_success "Results saved to nba-props-platform:${table_name}"
            ;;
        *)
            bq query --use_legacy_sql=false < "$query_path"
            ;;
    esac
}

# =============================================================================
# Main Command Handler
# =============================================================================

main() {
    local command=$1
    local output_format=""

    # Parse options
    shift || true
    while [[ $# -gt 0 ]]; do
        case $1 in
            --csv)
                output_format="csv"
                shift
                ;;
            --table)
                output_format="table"
                shift
                ;;
            --help|-h)
                show_help
                exit 0
                ;;
            *)
                print_error "Unknown option: $1"
                show_help
                exit 1
                ;;
        esac
    done

    # Handle commands
    case $command in
        # Show help
        help|--help|-h|"")
            show_help
            ;;

        # List queries
        list|ls)
            list_queries
            ;;

        # Historical validation
        completeness|complete|full|season)
            run_query "season_completeness_check.sql" "$output_format"
            ;;

        missing|gaps|dates)
            run_query "find_missing_games.sql" "$output_format"
            ;;

        confidence|conf|scores)
            run_query "confidence_score_monitoring.sql" "$output_format"
            ;;

        bookmakers|books|sportsbooks)
            run_query "bookmaker_coverage_analysis.sql" "$output_format"
            ;;

        playoffs|playoff)
            run_query "verify_playoff_completeness.sql" "$output_format"
            ;;

        # Daily monitoring
        yesterday|daily)
            run_query "daily_check_yesterday.sql" "$output_format"
            ;;

        week|weekly|7days)
            run_query "weekly_check_last_7_days.sql" "$output_format"
            ;;

        # Unknown command
        *)
            print_error "Unknown command: $command"
            echo ""
            show_help
            exit 1
            ;;
    esac
}

# =============================================================================
# Run
# =============================================================================

main "$@"
