# FILE: scripts/Dockerfile.odds_api_test
# Dockerfile for Odds API Single-Day Test Cloud Run Job
# Optimized for minimal dependencies and fast builds

FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies (minimal set)
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies first (for better caching)
RUN pip install --no-cache-dir \
    requests==2.31.0 \
    google-cloud-storage==2.10.0 \
    python-dotenv==1.0.0

# Copy scrapers utils directory (needed for team mapping)
COPY scrapers/__init__.py ./scrapers/
COPY scrapers/utils/ ./scrapers/utils/

# Copy the job script
COPY scripts/odds_api_single_day_test_job.py ./odds_api_single_day_test_job.py

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Create non-root user for security
RUN groupadd -r appuser && useradd -r -g appuser appuser
RUN chown -R appuser:appuser /app
USER appuser

# Set the entrypoint
ENTRYPOINT ["python", "odds_api_single_day_test_job.py"]

# Default arguments (can be overridden)
CMD ["--help"]

# Labels for better organization
LABEL maintainer="NBA Props Platform"
LABEL description="Odds API Single-Day Test Job"
LABEL version="1.0.0"
LABEL component="testing"