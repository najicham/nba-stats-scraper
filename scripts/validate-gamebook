#!/bin/bash
# =============================================================================
# File: scripts/validate-gamebook
# Purpose: CLI tool for running NBA.com gamebook validation queries
# Usage: ./scripts/validate-gamebook [command] [options]
# =============================================================================

set -e  # Exit on error

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Base directory
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PROJECT_ROOT="$( cd "$SCRIPT_DIR/.." && pwd )"
QUERIES_DIR="$PROJECT_ROOT/validation/queries/raw/nbac_gamebook"

# =============================================================================
# Helper Functions
# =============================================================================

print_header() {
    echo -e "${BLUE}=================================================${NC}"
    echo -e "${BLUE}$1${NC}"
    echo -e "${BLUE}=================================================${NC}"
}

print_success() {
    echo -e "${GREEN}✅ $1${NC}"
}

print_warning() {
    echo -e "${YELLOW}⚠️  $1${NC}"
}

print_error() {
    echo -e "${RED}❌ $1${NC}"
}

# =============================================================================
# Show Available Commands
# =============================================================================

show_help() {
    cat << EOF
${GREEN}NBA Gamebook Validation Tool${NC}

Usage: validate-gamebook [command] [options]

${YELLOW}HISTORICAL VALIDATION:${NC}
  completeness          Full season completeness check (all 4 seasons)
  missing               Find specific missing regular season games
  resolution            Name resolution quality analysis (98.92% target)
  problems              Detailed problem cases (for investigating failures)
  status                Player status validation (active/inactive/dnp)

${YELLOW}DAILY MONITORING:${NC}
  yesterday             Check if yesterday's games were processed
  week                  Review last 7 days coverage
  today                 Real-time scraper/processor health check

${YELLOW}OPTIONS:${NC}
  --csv                 Save results to CSV file
  --table               Save results to BigQuery table
  --help                Show this help message

${YELLOW}EXAMPLES:${NC}
  validate-gamebook completeness          # Run full season check
  validate-gamebook yesterday --csv       # Check yesterday, save to CSV
  validate-gamebook resolution            # Check name resolution quality
  validate-gamebook problems --csv        # Export problem cases for review
  validate-gamebook status                # Validate player status logic

${YELLOW}QUICK COMMANDS:${NC}
  validate-gamebook list                  # List all available queries
  validate-gamebook help                  # Show this help

${YELLOW}KEY METRICS:${NC}
  - Games per team: ~82 regular season
  - Players per game: ~30-35 (active + DNP + inactive)
  - Name resolution rate: ≥98.5% target (98.92% achieved)
  - Active players: Must have stats (points, minutes)
  - Inactive players: Should NOT have stats

EOF
}

# =============================================================================
# List All Queries
# =============================================================================

list_queries() {
    print_header "Available Validation Queries"
    echo ""
    echo "Historical Validation:"
    echo "  1. season_completeness_check.sql          (alias: completeness)"
    echo "  2. find_missing_regular_season_games.sql  (alias: missing)"
    echo "  3. name_resolution_quality.sql            (alias: resolution)"
    echo "  4. name_resolution_problem_cases.sql      (alias: problems)"
    echo "  5. player_status_validation.sql           (alias: status)"
    echo ""
    echo "Daily Monitoring:"
    echo "  6. daily_check_yesterday.sql              (alias: yesterday)"
    echo "  7. weekly_check_last_7_days.sql           (alias: week)"
    echo "  8. realtime_scraper_check.sql             (alias: today)"
    echo ""
}

# =============================================================================
# Run Query
# =============================================================================

run_query() {
    local query_file=$1
    local output_format=$2
    local query_path="$QUERIES_DIR/$query_file"
    
    if [ ! -f "$query_path" ]; then
        print_error "Query file not found: $query_file"
        echo "Run 'validate-gamebook list' to see available queries"
        exit 1
    fi
    
    print_header "Running: $query_file"
    echo ""
    
    case $output_format in
        csv)
            local timestamp=$(date +%Y%m%d_%H%M%S)
            local output_file="validation_${query_file%.sql}_${timestamp}.csv"
            print_warning "Saving results to: $output_file"
            bq query --use_legacy_sql=false --format=csv < "$query_path" > "$output_file"
            print_success "Results saved to $output_file"
            ;;
        table)
            local timestamp=$(date +%Y%m%d)
            local table_name="validation.gamebook_${query_file%.sql}_${timestamp}"
            print_warning "Saving to BigQuery table: $table_name"
            bq query --use_legacy_sql=false --destination_table="nba-props-platform:${table_name}" < "$query_path"
            print_success "Results saved to nba-props-platform:${table_name}"
            ;;
        *)
            bq query --use_legacy_sql=false < "$query_path"
            ;;
    esac
}

# =============================================================================
# Main Command Handler
# =============================================================================

main() {
    local command=$1
    local output_format=""
    
    # Parse options
    shift || true
    while [[ $# -gt 0 ]]; do
        case $1 in
            --csv)
                output_format="csv"
                shift
                ;;
            --table)
                output_format="table"
                shift
                ;;
            --help|-h)
                show_help
                exit 0
                ;;
            *)
                print_error "Unknown option: $1"
                show_help
                exit 1
                ;;
        esac
    done
    
    # Handle commands
    case $command in
        # Show help
        help|--help|-h|"")
            show_help
            ;;
        
        # List queries
        list|ls)
            list_queries
            ;;
        
        # Historical validation
        completeness|complete|full)
            run_query "season_completeness_check.sql" "$output_format"
            ;;
        
        missing|gaps)
            run_query "find_missing_regular_season_games.sql" "$output_format"
            ;;
        
        resolution|names|resolve)
            run_query "name_resolution_quality.sql" "$output_format"
            ;;
        
        problems|issues|failures)
            run_query "name_resolution_problem_cases.sql" "$output_format"
            ;;
        
        status|players)
            run_query "player_status_validation.sql" "$output_format"
            ;;
        
        # Daily monitoring
        yesterday|daily)
            run_query "daily_check_yesterday.sql" "$output_format"
            ;;
        
        week|weekly|7days)
            run_query "weekly_check_last_7_days.sql" "$output_format"
            ;;
        
        today|now|realtime)
            run_query "realtime_scraper_check.sql" "$output_format"
            ;;
        
        # Unknown command
        *)
            print_error "Unknown command: $command"
            echo ""
            show_help
            exit 1
            ;;
    esac
}

# =============================================================================
# Run
# =============================================================================

main "$@"