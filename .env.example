# NBA Props Platform - Environment Configuration
# DO NOT COMMIT ACTUAL VALUES - All secrets should be in GCP Secret Manager

# Project Configuration
PROJECT_ID=nba-props-platform
ENVIRONMENT=development
LOCAL_DEV=true

# Service Ports
SCRAPERS_PORT=8080
PROCESSORS_PORT=8081
REPORTGEN_PORT=8082

# Database (for local development)
POSTGRES_DB=nba_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis (for local development)
REDIS_HOST=localhost
REDIS_PORT=6379

# MinIO (local object storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_HOST=localhost
MINIO_PORT=9000

# Google Cloud (for deployment)
GOOGLE_APPLICATION_CREDENTIALS=./service-account-dev.json
BIGQUERY_DATASET=nba_analytics
GCS_BUCKET_RAW=nba-scraped-data
GCS_BUCKET_PROCESSED=nba-analytics-processed-data

# Logging
LOG_LEVEL=INFO

# ========================================
# SECRETS (Stored in GCP Secret Manager)
# ========================================
# These secrets are stored in GCP Secret Manager:
# - odds-api-key
# - bdl-api-key
# - bettingpros-api-key
# - brevo-smtp-password
# - aws-ses-access-key-id
# - aws-ses-secret-access-key
# - anthropic-api-key
# - slack-webhook-url
# - slack-webhook-url-reminders
# - coordinator-api-key
# - sentry-dsn

# For local development with Secret Manager:
# The SecretManager class will automatically fetch from GCP Secret Manager.
# If Secret Manager is unavailable, it falls back to these environment variables:

# ODDS_API_KEY=your-local-key-here
# BDL_API_KEY=your-local-key-here
# BETTINGPROS_API_KEY=your-local-key-here
# ANTHROPIC_API_KEY=your-local-key-here
# AWS_SES_ACCESS_KEY_ID=your-local-key-here
# AWS_SES_SECRET_ACCESS_KEY=your-local-key-here
# COORDINATOR_API_KEY=your-local-key-here
# SLACK_WEBHOOK_URL=your-local-webhook-here
# SLACK_WEBHOOK_URL_REMINDERS=your-local-webhook-here
# SENTRY_DSN=your-sentry-dsn-here

# ========================================
# EMAIL CONFIGURATION
# ========================================
# Email alert recipients (REQUIRED for email alerts)
EMAIL_ALERTS_TO=your-email@example.com
EMAIL_CRITICAL_TO=your-email@example.com

# AWS SES Configuration (PRIMARY - credentials in Secret Manager)
# Secret Manager keys: aws-ses-access-key-id, aws-ses-secret-access-key
AWS_SES_REGION=us-west-2
AWS_SES_FROM_EMAIL=alert@989.ninja
AWS_SES_FROM_NAME="NBA System Alerts"

# Brevo SMTP Configuration (FALLBACK - password in Secret Manager)
# Secret Manager key: brevo-smtp-password
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USERNAME=98104d001@smtp-brevo.com
BREVO_FROM_EMAIL=alert@989.ninja
BREVO_FROM_NAME="NBA System"

# Email Alert Thresholds
EMAIL_ALERT_UNRESOLVED_COUNT_THRESHOLD=50
EMAIL_ALERT_SUCCESS_RATE_THRESHOLD=90.0
EMAIL_ALERT_MAX_PROCESSING_TIME=30

# ========================================
# SLACK CONFIGURATION
# ========================================
# Slack webhook URLs are in Secret Manager:
# - slack-webhook-url (default channel)
# - slack-webhook-url-reminders
# - slack-webhook-error
# - slack-webhook-monitoring-error
# - slack-webhook-monitoring-warning
# - nba-daily-summary-slack-webhook
# - nba-grading-slack-webhook
SLACK_ALERTS_ENABLED=true
SLACK_CHANNEL=#nba-alerts
